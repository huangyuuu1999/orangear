pipeline {
    agent any // 只在local 节点构建，部署

    stages {
        stage('Build-image') {
            steps {
                echo 'Building..已经拉取源码，在此处执行构建'// 已经拉取源码，在此处执行构建
                script {
                    "sudo docker images"
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}